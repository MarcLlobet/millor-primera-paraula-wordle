        "start:server": "node dist-server/index.js"
    },
    "dependencies": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@testing-library/react": "^16.3.0",
        "@types/express": "^5.0.1",
        "@types/glob": "^8.1.0",
        "@types/node": "^22.15.3",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@types/supertest": "^6.0.3",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-v8": "3.1.2",
        "eslint": "^9.22.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "express": "^5.1.0",
        "glob": "^11.0.2",
        "husky": "^9.1.7",
        "jiti": "^2.4.2",
        "nodemon": "^3.1.10",
        "prettier": "^3.5.3",
        "supertest": "^7.1.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.4",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.26.1",
        "vite": "^6.3.1",
        "vitest": "^3.1.2"
    }
