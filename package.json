{
    "name": "millor-primera-paraula-wordle",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "wordle": "tsx server/logic/index.ts $NUM_LLETRES",
